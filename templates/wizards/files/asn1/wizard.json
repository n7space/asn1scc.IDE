{
    "version": 1,
    "supportedProjectTypes": [ ],
    "id": "B.ASN1",
    "category": "R.Asn1Acn",
    "trDescription": "Creates an ASN.1 model.",
    "trDisplayName": "ASN.1 Model",
    "trDisplayCategory": "ASN.1/ACN",
    "enabled": "%{JS: [ %{Plugins} ].indexOf('ASN.1/ACN') >= 0}",

    "options":
    [
        { "key": "FilePath", "value": "%{TargetPath}/%{SrcFileName}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Define ASN.1 Model",
            "trShortTitle": "Details",
            "typeId": "Fields",
            "data":
            [
                {
                    "name": "Model",
                    "trDisplayName": "Model name:",
                    "mandatory": true,
                    "type": "LineEdit",
                    "data": { "validator": "[A-Z]([a-zA-Z0-9]|-)*" }
                },
                {
                    "name": "FileExtensionType",
                    "type": "ComboBox",
                    "trDisplayName": "File extension",
                    "mandatory": true,
                    "data":
                    {
                        "items":
                        [
                            { "trKey": "asn", "value": ".asn" },
                            { "trKey": "asn1", "value": ".asn1" }
                        ]
                    }
                },
                {
                    "name": "SrcFileName",
                    "type": "LineEdit",
                    "trDisplayName": "Source file:",
                    "mandatory": true,
                    "data":
                    {
                        "trText": "%{JS: Util.fileName('%{Model}', '%{FileExtensionType}')}"
                    }
                },
                {
                    "name": "TargetPath",
                    "type": "PathChooser",
                    "trDisplayName": "Path:",
                    "mandatory": true,
                    "data":
                    {
                        "kind": "existingDirectory",
                        "basePath": "%{InitialPath}",
                        "path": "%{InitialPath}"
                    }
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators" :
    [
        {
            "typeId": "File",
            "data":
            {
                "source": "template.asn",
                "target": "%{FilePath}",
                "openInEditor": true
            }
        }
    ]
}
